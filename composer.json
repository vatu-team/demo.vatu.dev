{
  "name": "vatu/demo",
  "description": "Demo of Vatu development project workflow.",
  "type": "project",
  "keywords": [
    "wordpress"
  ],
  "homepage": "https://www.vatu.co.uk/",
  "readme": "https://github.com/vatu-team/demo.vatu.dev/blob/main/readme.md",
  "license": "proprietary",
  "authors": [
      {
        "name": "Vatu",
        "email": "hello@vatu.co.uk",
        "homepage": "https://www.vatu.co.uk/",
        "role": "Agency"
      }
  ],
  "support": {
    "issues": "https://github.com/vatu-team/demo.vatu.dev/issues"
  },
  "require": {
    "php": ">=7.3",
    "composer/installers": "1.11.0",
    "roots/wordpress": "5.8.0",
    "oscarotero/env": "2.1.0",
    "roots/bedrock-autoloader": "1.0.4",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "vlucas/phpdotenv": "5.3.0",
    "wpackagist-plugin/disable-emojis": "1.7.3",
    "wpackagist-plugin/wp-robots-txt": "1.1.0",
    "wpackagist-theme/twentytwentyone":"1.4.0",
    "wpackagist-plugin/aryo-activity-log": "2.7.0",
    "wpackagist-plugin/better-passwords": "1.8.0",
    "wpackagist-plugin/limit-login-attempts-reloaded": "2.23.1",
    "wpackagist-plugin/mailgun": "1.7.9",
    "wpackagist-plugin/redirection": "5.1.3",
    "wpackagist-plugin/wordpress-seo": "17.0",
    "wpackagist-plugin/zero-spam": "5.0.13"
  },
  "require-dev": {
      "rarst/laps": "3.3.4",
      "wpackagist-plugin/debug-bar-post-types": "2.0.0",
      "wpackagist-plugin/duplicate-post": "4.1.2",
      "wpackagist-plugin/log-deprecated-notices": "0.4.1",
      "wpackagist-plugin/query-monitor": "3.7.1",
      "wpackagist-plugin/redis-cache": "2.0.21",
      "wpackagist-plugin/rewrite-rules-inspector": "1.3.1",
      "wpackagist-plugin/rewrite-testing": "0.1.1",
      "wpackagist-plugin/transients-manager": "1.8.1",
      "wpackagist-plugin/user-switching": "1.5.7",
      "wpackagist-plugin/wordpress-beta-tester": "3.1.1",
      "wpackagist-plugin/wordpress-importer": "0.7.0",
      "wpackagist-plugin/wp-crontrol": "1.10.0"
  },
  "autoload": {
    "psr-4": {}
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "config": {
      "optimize-autoloader": true,
      "sort-packages": true,
      "preferred-install": "dist"
  },
  "scripts": {
    "post-update-cmd": [
        "@composer update --working-dir=tools/phpcs",
        "@composer update --working-dir=tools/phpcpd",
        "@composer update --working-dir=tools/phpmd",
        "@composer update --working-dir=tools/phpmnd",
        "@composer update --working-dir=tools/phpstan"
    ],
    "post-root-package-install": [
        "php -r \"copy('example.env', '.env');\""
    ],
    "test-phpcs": [
      "./tools/phpcs/vendor/bin/phpcs -p -s --standard=phpcs.xml --runtime-set testVersion 7.4-"
    ],
    "test-phpmd": [
      "./tools/phpmd/vendor/bin/phpmd ./public/app/themes/demo/ text ./phpmd.xml"
    ],
    "test-phpcpd": [
      "./tools/phpcpd/vendor/bin/phpcpd ./public/app/themes/demo/ --exclude=./vendor/*,./node_modules/*"
    ],
    "test-phpmnd": [
      "./tools/phpmnd/vendor/bin/phpmnd ./public/app/themes/demo --ignore-funcs=round,sleep --exclude=./vendor/ --exclude=./node_modules/ --progress"
    ],
    "test-phpstan": [
      "./tools/phpstan/vendor/bin/phpstan analyse ./public/app/themes/demo -c ./phpstan.neon"
    ],
    "test": [
      "composer run test-phpcs",
      "composer run test-phpmd",
      "composer run test-phpmnd",
      "composer run test-phpcpd",
      "composer run test-phpstan"
    ]
},
  "extra": {
      "installer-paths": {
          "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
          "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
          "public/app/themes/{$name}/": ["type:wordpress-theme"]
      },
      "wordpress-install-dir": "public/wp"
  }
}
