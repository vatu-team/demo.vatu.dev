{
  "name": "vatu/demo",
  "description": "Demo of Vatu development project workflow.",
  "type": "project",
  "keywords": [
    "wordpress"
  ],
  "homepage": "https://projecturl.com",
  "readme": "https://github.com/vatu-team/demo.vatu.dev/blob/main/readme.md",
  "license": "proprietary",
  "authors": [
      {
        "name": "Vatu",
        "email": "hello@vatu.dev",
        "homepage": "https://vatu.dev",
        "role": "Agency"
      }
  ],
  "support": {
    "issues": "https://github.com/vatu-team/demo.vatu.dev/issues"
  },
  "require": {
    "php": ">=7.3",
    "composer/installers": "2.2.0",
    "roots/wordpress": "6.1",
    "oscarotero/env": "2.1.0",
    "roots/bedrock-autoloader": "1.0.4",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.1.0",
    "vlucas/phpdotenv": "5.5.0",
    "wpackagist-plugin/disable-emojis": "1.7.4",
    "wpackagist-plugin/wp-robots-txt": "1.2",
    "wpackagist-theme/twentytwentyone":"1.7",
    "wpackagist-theme/generatepress":"3.2.1",
    "wpackagist-plugin/aryo-activity-log": "2.8.4",
    "wpackagist-plugin/better-passwords": "1.8.0",
    "wpackagist-plugin/limit-login-attempts-reloaded": "2.25.8",
    "wpackagist-plugin/mailgun": "1.8.5",
    "wpackagist-plugin/redirection": "5.3.5",
    "wpackagist-plugin/wordpress-seo": "19.9",
    "wpackagist-plugin/zero-spam": "5.4.3"
  },
  "require-dev": {
      "rarst/laps": "3.3.7",
      "wpackagist-plugin/debug-bar-post-types": "2.0.0",
      "wpackagist-plugin/duplicate-post": "4.5",
      "wpackagist-plugin/log-deprecated-notices": "0.4.1",
      "wpackagist-plugin/query-monitor": "3.10.1",
      "wpackagist-plugin/redis-cache": "2.2.1",
      "wpackagist-plugin/rewrite-rules-inspector": "1.3.1",
      "wpackagist-plugin/rewrite-testing": "0.1.1",
      "wpackagist-plugin/transients-manager": "2.0.3",
      "wpackagist-plugin/user-switching": "1.7.0",
      "wpackagist-plugin/wordpress-beta-tester": "3.2.3",
      "wpackagist-plugin/wordpress-importer": "0.8",
      "wpackagist-plugin/wp-crontrol": "1.14.0"
  },
  "autoload": {
    "psr-4": {}
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "config": {
      "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    },
      "optimize-autoloader": true,
      "sort-packages": true,
      "preferred-install": "dist"
  },
  "scripts": {
    "post-update-cmd": [
        "@composer update --working-dir=tools/parallel-lint",
        "@composer update --working-dir=tools/phpcs",
        "@composer update --working-dir=tools/phpcpd",
        "@composer update --working-dir=tools/phpmnd",
        "@composer update --working-dir=tools/phpstan"
    ],
    "post-root-package-install": [
        "php -r \"copy('example.env', '.env');\""
    ],
    "test-parallel-lint": [
      "./tools/parallel-lint/vendor/bin/parallel-lint --exclude */vendor --exclude */vendor_prefixed ./public"
    ],
    "test-phpcbf": [
      "./tools/phpcs/vendor/bin/phpcbf -p -s --standard=phpcs.xml.dist --runtime-set testVersion 7.3- ./public/app/themes/vatu-gp-child-theme"
    ],
    "test-phpcs": [
      "./tools/phpcs/vendor/bin/phpcs -p -s --standard=phpcs.xml.dist --runtime-set testVersion 7.3- ./public/app/themes/vatu-gp-child-theme"
    ],
    "test-phpcpd": [
      "./tools/phpcpd/vendor/bin/phpcpd ./public/app/themes/vatu-gp-child-theme/ --exclude=./vendor/*,./node_modules/*"
    ],
    "test-phpmnd": [
      "./tools/phpmnd/vendor/bin/phpmnd ./public/app/themes/vatu-gp-child-theme --ignore-funcs=round,sleep --exclude=./vendor/ --exclude=./node_modules/ --progress"
    ],
    "test-phpstan": [
      "./tools/phpstan/vendor/bin/phpstan analyse ./public/app/themes/vatu-gp-child-theme -c ./phpstan.neon.dist --memory-limit 256M"
    ],
    "test-phpunit": [
      "./tools/phpunit/vendor/bin/phpunit -c ./phpunit.xml"
    ],
    "test": [
      "composer run test-phpcbf",
      "composer run test-phpcs",
      "composer run test-phpmnd",
      "composer run test-phpcpd",
      "composer run test-phpstan"
    ]
},
  "extra": {
      "installer-paths": {
          "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
          "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
          "public/app/themes/{$name}/": ["type:wordpress-theme"]
      },
      "wordpress-install-dir": "public/wp"
  }
}
