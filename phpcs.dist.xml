<?xml version="1.0"?>
<ruleset name="VatuWP">

	<description>Vatu WordPress Coding Standards.</description>

	<!-- Add project files to be scanned. -->
	<file>./public/app/themes/vatu-base</file>

	<!--
	Prevent errors caused by WordPress Coding Standards not supporting PHP 8.0+.
	See https://github.com/WordPress/WordPress-Coding-Standards/issues/2035
	-->
	<ini name="error_reporting" value="E_ALL &#38; ~E_DEPRECATED" />

	<config name="minimum_wp_version" value="6.1" />
	<config name="testVersion" value="8.2-"/>

	<!-- Exclude source code we do not control. -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tools/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/vendor_prefixed/*</exclude-pattern>

	<arg name="basepath" value="./public/" />

	<!-- Ignore empty files. -->
	<rule ref="Internal.NoCodeFound">
		<severity>0</severity>
	</rule>

	<!-- Set default config. Can be overwritten. -->
	<config name="colors" value="1" />
	<arg value="sp" />
	<arg name="parallel" value="8"/>

	<!-- Only test PHP files. -->
	<arg name="extensions" value="php" />

	<!-- Include sniffs for PHP cross-version compatibility. -->
	<rule ref="PHPCompatibilityWP" />

	<!-- Exclude rules for modern development practices. -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>*/src/*</exclude-pattern>
		<exclude-pattern>*/tests/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<!-- Exclude rule for modern development. -->
		<exclude-pattern>*/src/*</exclude-pattern>
		<exclude-pattern>*/tests/*</exclude-pattern>
	</rule>

	<!-- Test against WordPress Coding Standards -->
	<rule ref="WordPress">

		<properties>
			<property name="text_domain" type="array">
				<element value="wordpress" />
			</property>
		</properties>

		<!-- Excludes as we only need to support PHP 8.2+ -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax.Found" />
		<exclude name="WordPress.NamingConventions.ValidHookName.UseUnderscores" />
		<exclude name="WordPress.NamingConventions.ValidHookName.NotLowercase" />
		<exclude name="Squiz.Commenting.ClassComment.Missing" />
	</rule>

	<!-- Select WordPress Theme Review Standards. -->
	<rule ref="WPThemeReview.CoreFunctionality.FileInclude">
	</rule>
	<rule ref="WPThemeReview.CoreFunctionality.NoDeregisterCoreScript"/>
	<rule ref="WPThemeReview.PluginTerritory.AdminBarRemoval">
		<properties>
			<property name="remove_only" value="false"/>
		</properties>
	</rule>
	<rule ref="WPThemeReview.PluginTerritory.ForbiddenFunctions" />
	<rule ref="WPThemeReview.PluginTerritory.SessionFunctionsUsage" />
	<rule ref="WPThemeReview.PluginTerritory.SessionVariableUsage" />
</ruleset>
